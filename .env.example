# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/instasell"
REDIS_URL="redis://localhost:6379"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# API Configuration
API_URL="http://localhost:3001"
FRONTEND_URL="http://localhost:3000"
NODE_ENV="development"
PORT=3001

# Payment Configuration
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Razorpay (for UPI/Net Banking in India)
RAZORPAY_KEY_ID="rzp_test_your_key_id"
RAZORPAY_KEY_SECRET="your_razorpay_secret"

# Email Configuration
SENDGRID_API_KEY="SG.your_sendgrid_api_key"
FROM_EMAIL="noreply@instasell.com"
FROM_NAME="InstaSell Marketplace"

# File Upload Configuration
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_BUCKET_NAME="instasell-uploads"
AWS_REGION="us-east-1"

# Alternative: Cloudinary for image uploads
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# Push Notifications
FCM_SERVER_KEY="your_firebase_server_key"
APNS_KEY_ID="your_apns_key_id"
APNS_TEAM_ID="your_apns_team_id"

# SMS Configuration (optional)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Social Login (optional)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
FACEBOOK_APP_ID="your_facebook_app_id"
FACEBOOK_APP_SECRET="your_facebook_app_secret"

# Monitoring & Analytics
SENTRY_DSN="your_sentry_dsn"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET="your-session-secret-key"
SESSION_MAX_AGE=86400000  # 24 hours

# Auction Configuration
AUCTION_MIN_DURATION_HOURS=1
AUCTION_MAX_DURATION_HOURS=168  # 7 days
AUCTION_EXTENSION_TIME_SECONDS=300  # 5 minutes
AUCTION_BID_INCREMENT_MIN=1.00

# Escrow Configuration
ESCROW_HOLDING_DAYS=7
PLATFORM_COMMISSION_RATE=0.05  # 5%

# File Upload Limits
MAX_FILE_SIZE_MB=10
MAX_FILES_PER_PRODUCT=10

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=6
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MINUTES=30

# Development Configuration
DEBUG_MODE=true
LOG_LEVEL="debug"
ENABLE_CORS=true

# Production Configuration (uncomment for production)
# NODE_ENV="production"
# DEBUG_MODE=false
# LOG_LEVEL="error"
# ENABLE_CORS=false
# SECURE_COOKIES=true
# TRUST_PROXY=true

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000

# Redis Configuration
REDIS_PASSWORD=""
REDIS_DB=0
REDIS_KEY_PREFIX="instasell:"

# Webhook URLs (for external services)
STRIPE_WEBHOOK_URL="/api/payments/webhook"
DELIVERY_WEBHOOK_URL="/api/delivery/webhook"

# External API Keys
GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
SHIPMENT_TRACKING_API_KEY="your_tracking_api_key"

# Feature Flags
ENABLE_AUCTIONS=true
ENABLE_CHAT=true
ENABLE_NOTIFICATIONS=true
ENABLE_DELIVERY_TRACKING=true
ENABLE_SOCIAL_LOGIN=false

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="instasell-backups"

# CDN Configuration
CDN_URL="https://cdn.instasell.com"
STATIC_FILES_URL="https://static.instasell.com"

# Search Configuration (if using Elasticsearch)
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX="instasell_products"

# Cache Configuration
CACHE_TTL_SECONDS=3600  # 1 hour
CACHE_MAX_ITEMS=10000

# Logging Configuration
LOG_FILE_PATH="./logs/app.log"
LOG_MAX_SIZE="10m"
LOG_MAX_FILES=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL_MS=30000
HEALTH_CHECK_TIMEOUT_MS=5000

# Queue Configuration (if using Bull/Agenda)
QUEUE_REDIS_URL="redis://localhost:6379/1"
QUEUE_CONCURRENCY=5

# Metrics Configuration
METRICS_PORT=9090
ENABLE_METRICS=true

# Testing Configuration
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/instasell_test"
TEST_REDIS_URL="redis://localhost:6379/15"